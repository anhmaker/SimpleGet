<script type="text/javascript">
    function sendMessage() {
        const Http = new XMLHttpRequest();
        const url = 'http://localhost:54706/api/values/5';
        Http.open("GET", url);
        var inputValue = getValue();
        Http.setRequestHeader('SimpleTocken', inputValue)
        Http.send();
        Http.onreadystatechange=(e)=>{
            console.log(Http.responseText)
            setValue(Http.responseText);
        }
    }

    function getValue(){
        var s = document.getElementById("inputValue");
        return s.value;
    } 

    function setValue(value){
        var s = document.getElementById("valueResponse");
        s.innerHTML  = value;
    } 
</script>
